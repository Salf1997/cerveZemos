<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>CerveZemos</name>
    <description>
        CerveZemos: una aplicacion para buscar bares y bebidas.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        CerveZemos
    </author>
    <content src="index.html" />
	  <preference name="permissions" value="none"/>
	  <preference name="phonegap-version" value="cli-8.0.0" />
	  <preference name="orientation" value="default"/>
	  <preference name="target-device" value="universal"/>
	  <preference name="fullscreen" value="true"/>
	  <preference name="webviewbounce" value="true"/>
	  <preference name="prerendered-icon" value="true"/>
	  <preference name="stay-in-webview" value="false"/>
	  <preference name="ios-statusbarstyle" value="black-opaque"/>
	  <preference name="detect-data-types" value="true"/>
	  <preference name="exit-on-suspend" value="false"/>
	  <preference name="show-splash-screen-spinner" value="true"/>
	  <preference name="auto-hide-splash-screen" value="true"/>
	  <preference name="disable-cursor" value="false"/>
	  <preference name="android-minSdkVersion" value="16"/>
	  <preference name="android-installLocation" value="auto"/>
	  <gap:plugin name="org.apache.cordova.geolocation"/>
	<plugin name="cordova-plugin-googlemaps" spec="^2.2.5">
	    <variable name="API_KEY_FOR_ANDROID" value="(api key)" />
	    <variable name="API_KEY_FOR_IOS" value="(api key)" />
	    <variable name="PLAY_SERVICES_VERSION" value="11.8.0" />
	    <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.0" />
	    <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="(your custom message)" />
	    <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="(your custom message)" />
  	</plugin>


	  <icon src="www/assets/images/ztransparente.png"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="android" gap:qualifier="ldpi"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="android" gap:qualifier="mdpi"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="android" gap:qualifier="hdpi"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="android" gap:qualifier="xhdpi"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="winphone"/>
	  <icon src="www/assets/images/ztransparente.png" gap:platform="winphone" gap:role="background"/>
    <access origin="*" />
</widget>
